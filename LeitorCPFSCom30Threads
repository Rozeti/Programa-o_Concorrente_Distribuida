package LeitorCPFS;

import java.io.*;
import java.nio.file.*;
import java.text.SimpleDateFormat;
import java.util.*;

public class LeitorCPFSCom30Threads {

    public static void main(String[] args) {
        String pastaArquivos = "cpfs"; // pasta onde estão os arquivos
        SimpleDateFormat sdf = new SimpleDateFormat("dd/MM/yyyy HH:mm:ss");

        long inicioMillis = System.currentTimeMillis();
        Date inicioData = new Date(inicioMillis);
        System.out.println("Início: " + sdf.format(inicioData));

        List<Thread> threads = new ArrayList<>();

        // Criar 30 threads, 1 arquivo por thread
        for (int i = 1; i <= 30; i++) {
            final int arquivoIndex = i;
            Thread t = new Thread(() -> processarArquivo(arquivoIndex, pastaArquivos));
            threads.add(t);
            t.start();
        }

        // Aguardar todas as threads terminarem
        for (Thread t : threads) {
            try {
                t.join();
            } catch (InterruptedException e) {
                System.out.println("Erro ao aguardar thread: " + e.getMessage());
            }
        }

        long fimMillis = System.currentTimeMillis();
        Date fimData = new Date(fimMillis);
        long duracao = fimMillis - inicioMillis;

        System.out.println("Término: " + sdf.format(fimData));
        System.out.println("Duração total: " + duracao + " milissegundos");

        // Criar log de execução
        try (BufferedWriter writer = new BufferedWriter(new FileWriter("versao30threads.txt"))) {
            writer.write("Início: " + sdf.format(inicioData) + "\n");
            writer.write("Término: " + sdf.format(fimData) + "\n");
            writer.write("Duração total: " + duracao + " milissegundos\n");
        } catch (IOException e) {
            System.out.println("Erro ao criar o arquivo de log: " + e.getMessage());
        }
    }

    private static void processarArquivo(int i, String pasta) {
        String nomeArquivo = Paths.get(pasta, "f" + i + "-4-25.txt").toString();
        int validos = 0, invalidos = 0;

        try {
            List<String> linhas = Files.readAllLines(Paths.get(nomeArquivo));

            for (String linha : linhas) {
                if (validaCPF(linha)) {
                    validos++;
                } else {
                    invalidos++;
                }
            }

            System.out.println("Arquivo f" + i + "-4-25.txt: " + validos + " válidos | " + invalidos + " inválidos");

        } catch (IOException e) {
            System.out.println("Erro ao ler o arquivo " + nomeArquivo + ": " + e.getMessage());
        }
    }

    public static boolean validaCPF(String cpf) {
        cpf = cpf.replaceAll("\\D", "");

        if (cpf.length() != 11 || cpf.chars().distinct().count() == 1) {
            return false;
        }

        for (int i = 9; i <= 10; i++) {
            int soma = 0;
            for (int j = 0; j < i; j++) {
                soma += (cpf.charAt(j) - '0') * ((i + 1) - j);
            }
            int digito = (soma * 10) % 11;
            if (digito == 10) digito = 0;
            if (digito != (cpf.charAt(i) - '0')) {
                return false;
            }
        }

        return true;
    }
}
